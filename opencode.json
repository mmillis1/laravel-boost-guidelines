{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "laravel-boost-host": {
            "type": "local",
            "enabled": true,
            "command": ["ddev", "exec", "php", "artisan", "boost:mcp"]
        },
        "daisyui": {
            "type": "remote",
            "enabled": true,
            "url": "https://gitmcp.io/saadeghi/daisyui"
        },
        "chrome-devtools": {
            "type": "local",
            "command": ["npx", "chrome-devtools-mcp@latest", "--executablePath", "/usr/bin/chromium"]
        }
    }
}
